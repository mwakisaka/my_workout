<section class="section">
  <h2 class="section_title font_blue">User Edit</h2>

  <% @user.errors.full_messages.each do |message| %>
  <div class="form_error">
    <%= message %>
  </div>
  <% end %>

  <%= form_tag("/users/#{@user.id}/update") do %>

  <div class="form">
    <label for="name">User Name</label>
    <input type="text" name="name" placeholder="User Name" value="<%= @user.name %>" />
    <label for="email">Email</label>
    <input type="text" name="email" placeholder="Email" value="<%= @user.email %>" />
    <label for="passowrd">Password</label>
    <input type="password" name="password" placeholder="Password" value="<%= @user.password %>" />
    <input class="btn" type="submit" value="Save" />
  </div>
  <% end %>

  <p class="delete_text">
    Delete your account?
    <%= link_to("click here", "/users/#{@user.id}/destroy", class:"delete_link") %>
  </p>


</section>