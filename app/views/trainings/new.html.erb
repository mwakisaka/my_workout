<section class="section">
  <h2 class="section_title font_blue">New Record for Workout</h2>

  <%= form_tag("/workout/create") do %>
  <div class="form">
    <label for="event">Workout Type</label>
    <select name="event" class="select">
      <option hidden>Select</option>
      <option disabled>─ CHEST ─────</option>
      <option value="BenchPress">BenchPress</option>
      <option value="IncBenchPress">InclineBenchPress</option>
      <option value="DumbellFly">DumbellFly</option>
      <option value="IncDumbPress">InclineDumbellPress</option>
      <option value="IncDumbFly">InclineDumbellFly</option>
      <option value="DumbPullOver">DumbellPullOver</option>
      <option disabled>─ ARM ─────</option>
      <option value="ArmCurl">ArmCurl</option>
      <option value="IncArmCurl">InclineArmCurl</option> 
      <option value="HammerCurl">HammerCurl</option>
      <option value="TriExtension">TricepsExtention</option>
      <option value="IncTriExt">InclineTricepsExtention</option>
      <option value="Dips">Dips</option>
      <option disabled>─ SHOULDER ─────</option>
      <option value="ShoulderPress">ShoulderPress</option>
      <option value="ArnoldPress">ArnoldPress</option>
      <option value="FrontPress">FrontPress</option>
      <option value="FrontRaise">FrontRaise</option>
      <option value="SideRaise">SideRaise</option>
      <option value="IncSideRaise">InclineSideRaise</option>
      <option value="RearRaise">RearRaise</option>
      <option disabled>─ BACK ─────</option>
      <option value="Chinning">Chinning</option>
      <option value="LatPullDown">LatPullDown</option>
      <option value="DumbellRow">DumbellRow</option>
      <option value="BentOverRow">BentOverRow</option>
      <option value="DumbellRow">DumbellRow</option>
      <option value="DeadLift">DeadLift</option>
      <option value="ChestSupRow">ChestSupportedRow</option>
      <option disabled>─ LEG ─────</option>
      <option value="Squat">Squat</option>
      <option value="BulgSquat">BulgarianSquat</option>
      <option value="LegPress">LegPress</option>
      <option value="Calf">Calf</option>
      <option value="Lunge">Lunge</option>
    </select>
    <label for="reps">Reps</label>
    <input type="number" name="reps">
    <label for="weight">Weights</label>
    <input type="number" step="0.1" name="weight">
    <label for="date">Date</label>
    <input type="date" name="date" value="<%= @today %>">
    <input type="submit" value="Save" class="btn" />
  </div>
  <% end %>
</section>
