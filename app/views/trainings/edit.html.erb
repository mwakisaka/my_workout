<section class="section">
  <h2 class="section_title font_blue">Workout Weights Edit</h2>

  <%= form_tag("/workout/#{@workout.id}/update") do %>
  <div class="form">
    <label for="event">Workut Event</label>
    <select name="event" class="select">
      <option hidden>Select</option>
      <option value="BenchPress">BenchPress</option>
      <option value="DumbellFly">DumbellFly</option>
      <option value="InclinePress">InclinePress</option>
      <option value="IncDumbFly">InclineDumbellFly</option>
      <option value="ArmCurl">ArmCurl</option>
      <option value="TriExtension">TricepsExtention</option>
      <option value="ShoulderPress">ShoulderPress</option>
      <option value="SideRaise">SideRaise</option>
      <option value="Chinning">Chinnning</option>
      <option value="BentOverRow">BentOverRow</option>
    </select>
    <label for="reps">Reps</label>
    <input type="number" name="reps" value="<%=@workout.reps %>">
    <label for="weight">Weights</label>
    <input type="number" step="0.1" name="weight" value="<%=@workout.weight %>">
    <label for="date">Date</label>
    <input type="date" name="date" value="<%= @workout.start_time %>">
    <input type="submit" value="Save" class="btn" />
  </div>
  </div>
  <% end %>


</section>